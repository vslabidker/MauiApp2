<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.FavoritesPage"
             Title="Избранное">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <CollectionView x:Name="FavoritesCollectionView"
                            SelectionMode="Multiple"
                            SelectionChanged="OnSelectionChanged">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Image Source="{Binding Thumbnail}" HeightRequest="150" Aspect="AspectFit" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button x:Name="DeleteButton"
                    Text="Удалить выбранные книги"
                    Clicked="OnDeleteClicked"
                    IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
