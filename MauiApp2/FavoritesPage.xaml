<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.FavoritesPage"
             Title="Избранные книги">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <CollectionView x:Name="FavoritesCollectionView"
                            ItemsSource="{Binding FavoriteBooks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray" Padding="10" Margin="5">
                            <HorizontalStackLayout Spacing="10">
                                <CheckBox IsChecked="{Binding IsSelected}" />
                                <VerticalStackLayout>
                                    <Label Text="{Binding Title}" FontAttributes="Bold" />
                                    <Image Source="{Binding Thumbnail}" HeightRequest="150" Aspect="AspectFit" />
                                </VerticalStackLayout>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Удалить выбранные"
                    Clicked="OnDeleteClicked"
                    IsVisible="True" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
